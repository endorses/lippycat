# Dockerfile for lippycat processor node (integration testing)
FROM golang:1.24-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git make gcc musl-dev libpcap-dev linux-headers

WORKDIR /build

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build processor variant
RUN make processor

# Runtime image
FROM alpine:latest

# Install runtime dependencies
RUN apk add --no-cache libpcap ca-certificates netcat-openbsd

# Copy binary from builder
COPY --from=builder /build/bin/lc-process /usr/local/bin/lc

# Create directories
RUN mkdir -p /certs /output /testdata

# Non-root user
RUN addgroup -g 1000 lippycat && \
    adduser -D -u 1000 -G lippycat lippycat && \
    chown -R lippycat:lippycat /output

USER lippycat

EXPOSE 50051

ENTRYPOINT ["/usr/local/bin/lc"]
CMD ["process", "--listen", "0.0.0.0:50051"]
